{
  "name": "@grant/mgit",
  "version": "1.0.0",
  "description": "Clone all repos for a GitHub user or organization",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && npm i -g --loglevel=error",
    "build:ci": "tsc --project tsconfig.json",
    "dev": "tsc --project tsconfig.json --watch",
    "build-fresh": "npm cache clean --force && npm i && npm run build",
    "publish": "npm publish --access public",
    "lint": "tslint --project tslint.json && echo 'No lint errors. All good!'",
    "fix": "tslint --project tslint.json --fix && npm run prettier",
    "prettier": "npx prettier --write \"src/**/*.ts\""
  },
  "bin": {
    "mgit": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grant/mgit.git"
  },
  "keywords": ["git", "multiple", "repo"],
  "author": "Grant Timmerman",
  "license": "MIT",
  "bugs": { "url": "https://github.com/grant/mgit/issues" },
  "homepage": "https://github.com/grant/mgit#readme",
  "files": ["dist"],
  "devDependencies": {
    "@types/cli-spinner": "^0.2.3",
    "@types/node": "^25.0.0",
    "commander": "^14.0.3",
    "prettier": "^3.4.2",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.6.2",
    "cli-spinner": "^0.2.10",
    "simple-git": "^3.32.2"
  }
}
